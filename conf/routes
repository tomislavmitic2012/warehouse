# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                     controllers.Products.index

# Product warehouse URLs
GET           /products             controllers.Products.list(page: Integer ?= 1)
POST          /products/            controllers.Products.save()
GET           /products/new         controllers.Products.newProduct()
# This is a test method, to test the Products.save() action method (comment out once done)
#GET           /products/save        controllers.Products.save()
#GET           /products/:ean        controllers.Products.details(ean: String)
GET           /products/:ean        controllers.Products.details(ean: models.Products)
DELETE        /products/:ean        controllers.Products.delete(ean: String)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file         controllers.Assets.at(path="/public", file)
